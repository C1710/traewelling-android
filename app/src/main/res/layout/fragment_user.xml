<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="de.traewelling.ui.user.UserFragmentViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toTopOf="parent"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/image_profile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_new_user"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_username"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_profile"
                        tools:text="username"
                        android:text="@{viewModel.username}"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:layout_marginTop="16dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_username"
                        android:useDefaultMargins="true"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_navigation"
                                app:tint="@color/black"
                                android:layout_marginRight="8dp"/>
                            <TextView
                                android:id="@+id/textView_kilometres"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="20sp"
                                style="@style/Theme.Traewelling.StatisticTexts"
                                android:text="@{viewModel.kilometres}"
                                tools:text="1234,56 km" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_score"
                                app:tint="@color/black"
                                android:layout_marginRight="8dp"/>
                            <TextView
                                android:id="@+id/textView_points"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/Theme.Traewelling.StatisticTexts"
                                android:text="@{@string/display_points(viewModel.points)}"
                                tools:text="123 points" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_travel_time"
                                app:tint="@color/black"
                                android:layout_marginRight="8dp"/>
                            <TextView
                                android:id="@+id/textView_travelTime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/Theme.Traewelling.StatisticTexts"
                                android:text="@{@string/display_travel_time(viewModel.travelHours, viewModel.travelMinutes)}"
                                tools:text="14h 5min" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_speed"
                                    app:tint="@color/black"
                                    android:layout_marginRight="8dp"/>
                                <TextView
                                    android:id="@+id/textView_averageSpeed"
                                    style="@style/Theme.Traewelling.StatisticTexts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@{@string/display_average_speed(viewModel.averageSpeed)}"
                                    tools:text="123,45 km/h" />
                        </LinearLayout>
                    </GridLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>